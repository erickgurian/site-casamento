<div class="ls-login-parent">
  <div class="ls-login-inner">
    <div class="ls-login-container">
      <div class="ls-login-box">
      <h1 class="ls-login-logo">Login</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
    class: "ls-form ls-login-form") do |f| %>

    <label class="ls-label">
      <%= f.label :email, class: "ls-label-text ls-hidden-accessible", placeholder: 'Email' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ls-login-bg-user ls-field-lg" %>
    </label>

    <label class="ls-label">
      <%= f.label :password, class: "ls-label-text ls-hidden-accessible" %><br />
      <div class="ls-prefix-group ls-field-lg">
      <%= f.password_field :password, autocomplete: "current-password", class: "ls-login-bg-password" %>
      <a class="ls-label-text-prefix ls-toggle-pass ls-ico-eye" data-toggle-class="ls-ico-eye, ls-ico-eye-blocked" data-target="#password_field" href="#"></a>
      </div>
    </label>
    <br>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Entrar", class: "ls-btn-primary ls-btn-block ls-btn-lg" %>
    </div>
  <% end %>
 

<%= render "devise/shared/links" %>
