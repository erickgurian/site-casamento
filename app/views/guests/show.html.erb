<div class="ls-list">
  <header class="ls-list-header">
    <div class="ls-list-title col-md-9">
      <a href="#" ><%= @guest.name %></a>
    </div>
  </header>
  <div class="ls-list-content ">
    <div class="col-xs-12 col-md-6">
      <span class="ls-list-label">Email</span>
      <strong><%= @guest.email %></strong>
    </div>
    <div class="col-xs-12 col-md-6">
      <span class="ls-list-label">Presença</span>
      <strong><%= @guest.attend ? 'Sim' : 'Não' %></strong>
    </div>
  </div>
</div>

<div class="ls-list">
  <header class="ls-list-header">
    <div class="col-md-9">
      <div class="ls-list-title ">
        <a href="#" >Comentários</a>
      </div>
      <div class="ls-list-description">
        <p><%= @guest.comment %></p>
      </div>
    </div>
  </header>
  <div class="ls-list-content ">
    <div class="col-xs-12 col-md-6">
      <span class="ls-list-label">Assunto</span>
      <strong><%= @guest.subject %></strong>
    </div>
  </div>
</div>
